<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SignupPage"
            Shell.NavBarIsVisible="False"
             Title="SignupPage">
    <Grid RowDefinitions="1*,8*,1*">
        <Frame BackgroundColor="{StaticResource DashboardBackground}"
               Grid.Row="1" VerticalOptions="CenterAndExpand"
               Margin="0, 0, 40, 0">

            <VerticalStackLayout>
                <Label Text="Register"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="Black"/>
                <Label Text="Join Us Today"
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="Black"/>

                <Frame BackgroundColor="{StaticResource DashboardBackground}"
                       CornerRadius="10"
                       Margin="20">
                    <VerticalStackLayout>
                        <Label Text="Username"
                               FontSize="14"
                               TextColor="Black"/>
                        <Entry Placeholder="Enter your username"
                               BackgroundColor="White"
                               Margin="0,0,0,10"/>

                        <Label Text="Email"
                               FontSize="14"
                               TextColor="Black"/>
                        <Entry Placeholder="Enter your email"
                               BackgroundColor="White"
                               Margin="0,0,0,10"/>

                        <Label Text="Password"
                               FontSize="14"
                               TextColor="Black"/>
                        <Entry Placeholder="Enter your password"
                               IsPassword="True"
                               BackgroundColor="White"/>

                        <Label Text="Confirm Password"
                               FontSize="14"
                               TextColor="Black"/>
                        <Entry Placeholder="Enter your password"
                               IsPassword="True"
                               BackgroundColor="White"/>

                        <Button Text="Register"
                                BackgroundColor="Gold"
                                TextColor="Black"
                                CornerRadius="5"
                                Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Already have an Account? "
                           FontSize="14"
                           TextColor="Black"/>
                    <Label Text="Login here"
                           FontSize="14"
                           TextColor="Green"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </Frame>
    </Grid>
</ContentPage>
