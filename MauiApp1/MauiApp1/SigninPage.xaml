<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.SigninPage"
             Shell.NavBarIsVisible="False"
             Title="SigninPage">
    <Grid RowDefinitions="1*,8*,1*">
        <Frame BackgroundColor="{StaticResource DashboardBackground}"
               Grid.Row="1" VerticalOptions="CenterAndExpand"
               Margin="0, 0, 40, 0">


            <VerticalStackLayout>
                <Label Text="Login"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="Black"/>
                <Label Text="Hello!"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="Black"/>

                <Frame BackgroundColor="{StaticResource DashboardBackground}"
               CornerRadius="10"
               Margin="20">
                    <VerticalStackLayout>
                        <Label Text="Email or Username"
                       FontSize="14"
                       TextColor="Black"/>
                        <Entry Placeholder="Enter your email or username"
                       BackgroundColor="White"
                       Margin="0,0,0,10"/>

                        <Label Text="Password"
                       FontSize="14"
                       TextColor="Black"/>
                        <Entry Placeholder="Enter your password"
                       IsPassword="True"
                       BackgroundColor="White"/>

                        <Button Text="Login"
                        BackgroundColor="Gold"
                        TextColor="Black"
                        CornerRadius="5"
                        Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </Frame>

                <Label Text="Forgot Password"
               FontSize="14"
               TextColor="Black"
               HorizontalOptions="Center"/>

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Donâ€™t have an account? "
                   FontSize="14"
                   TextColor="Black"/>
                    <Label Text="Register now"
                   FontSize="14"
                   TextColor="Green"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </Frame>
    </Grid>
</ContentPage>